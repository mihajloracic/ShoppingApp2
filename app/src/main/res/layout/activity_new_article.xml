<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.design.widget.TextInputEditText
            android:layout_margin="5dp"
            android:padding="5dp"
            android:maxLines="1"
            android:textSize="25dp"
            android:textColor="@color/primary_text"
            android:hint="Type article name..."
            android:id="@+id/new_article_article_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <android.support.design.widget.TextInputEditText
            android:layout_margin="5dp"
            android:padding="5dp"
            android:maxLines="1"
            android:textSize="25dp"
            android:textColor="@color/primary_text"
            android:hint="Type article amount..."
            android:id="@+id/new_article_article_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <android.support.v7.widget.AppCompatButton
        android:layout_margin="5dp"
        android:padding="5dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Add article to list"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/new_article_add_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
